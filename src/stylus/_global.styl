*
  margin 0
  padding 0
  box-sizing border-box
  outline: none
  text-decoration none

html
  font-size: 10px
  font-family Roboto
  color #363636
  font-weight normal

#wrapper
  width 100%
  overflow-x: hidden

.g-wrapper
  max-width: 120rem
  margin 0 auto
  padding-left 0.6rem
  padding-right 0.6rem

.section
  &__title 
    display: table;
    width: auto;
    margin: 15px auto;
    letter-spacing: 2px;
    font-size 3.4rem
    font-weight 700
    text-align: center
    position relative
    margin-bottom 4rem
    &:before 
      content: "";
      position: absolute;
      top: 50%;
      margin-top: -8px;
      left: -35px;
      width: 10px;
      height: 10px;
      border: 3px solid #EF5937;
      transform: rotate(45deg)
    &:after 
      content: "";
      position: absolute;
      top: 50%;
      margin-top: -8px;
      right: -35px;
      width: 10px;
      height: 10px;
      border: 3px solid #EF5937;
      transform: rotate(45deg)
  &__text
    font-size 1.6rem  
    line-height 2rem
    &_margin
      margin-bottom 1rem
  &__block
    padding 4rem 0 6rem

.button
  padding 1rem 0.8rem
  text-transform uppercase 
  border-radius 0.2rem 
  font-size 1.5rem
  font-family: Roboto
  font-weight 700 
  color #008D21
  border: 0.1rem solid #008D21;
  margin-right 2rem
  box-shadow: 0 9px 16px rgba(0, 0, 0, 0.11)
  transition:  0.4s
  &:last-child
      margin-right 0
  &:hover
      color white
      background-color #008D21
  &__orange
      color white
      background-color: #EF5937
      border: 0.1rem solid #EF5937
      &:hover
          color #EF5937 
          background-color white


@media (max-width: 1600px)
  html
    font-size: 9px

@media (max-width: 1440px)
  html
    font-size: 9px

@media (max-width: 1280px)
  html
    font-size: 8px

@media (max-width: 1024px)
  html
    font-size: 7px
@media (max-width: 1000px)
  html
    font-size: 10px
@media (max-width: 867px)
  html
    font-size: 8px
@media (max-width: 667px)
  html
    font-size: 9px
