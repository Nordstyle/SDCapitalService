.header 
    padding 1.8rem 0
    height 96px
    box-shadow 0 10px 20px -10px rgba(0, 0, 0, 0.09), 0 5px 10px -5px rgba(0, 0, 0, 0.09)
    border-bottom 1px solid #E2E2E2
    &__wrapper 
        display flex
        justify-content space-between
        align-items center
    &__left 
        width: 50%;
        display flex
        justify-content space-between
        align-items center
    &__logo 
        max-width: 14rem
        height 7rem
        & img 
            width 100%
            height 100%
            object-fit: contain
    &__tel
        display: block
        font-size 1.6rem
        font-family: Roboto
        font-weight: 400
        color #363636
        margin-bottom: 1rem
        &:hover .header__tel_big
            color rgb(173, 2, 1)
        &_big 
            color #363636
            font-size 1.8rem
            font-weight 700
            transition: 0.3s
    &__callback
        display: inline-block
        font-family: Roboto
        font-weight: 500
        font-size 1.3rem
        color #363636
        border-bottom 1px dotted #363636
        position: relative
        cursor pointer
        float:right
        transition: 0.3s
        &:hover 
            color rgb(173, 2, 1)
        &:before
            content ''
            left -2.4rem
            top 0
            background url('../images/phone-call.png') center center no-repeat
            background-size contain
            width 16px
            height: 16px
            position absolute
                