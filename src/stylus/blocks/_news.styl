.news 
  background-color: #f6f6f6;
  &__container 
    display flex
    justify-content: space-between
    align-items stretch
  &__left 
    width 46%
    display flex
    flex-direction: column
    align-items flex-start
    justify-content: space-between
    margin-right 2rem
  &__right 
    width 46%
  &__button
    display inline-block
  &__link
    color rgb(173, 2, 1)
    font-size 1.6rem
    font-weight 700
    text-transform: uppercase
  &__item
    width 100%
    display flex
    justify-content: flex-start
    align-items flex-start
    margin-bottom 1rem
    color #363636
    background white
    border 1px solid #e2e2e2
    transition: 0.3s
    box-shadow 0 10px 20px -10px rgba(0,0,0,.09), 0 5px 10px -5px rgba(0,0,0,.09)
    &:last-child
      margin-bottom 0
    &:hover
      transform scale(1.02)
    &_main
      display flex
      flex-direction: column
      margin-bottom 2rem
  &__content
    padding 2rem 1.4rem
    display flex
    flex-direction: column
    align-items: space-around
  &__title
    font-size 1.6rem
    font-weight 500
    margin-bottom 1rem
  &__date
    font-size 1.4rem
    &_main 
      margin-bottom 0.4rem
  &__img 
    margin-right 2rem
    & img 
      width 10rem
      height 10rem
      object-fit: cover
    &_main 
      margin-right 0
      & img 
        width 100%
        height 24rem
  &__text
    font-size 1.2rem
    line-height 1.8rem  
  &__inner 
    padding 1.4rem 1.4rem  0rem 1.4rem
  &__footer
    margin-top 2rem
    padding 0.4rem 0 1rem
    border-top 1px solid #e2e2e2
  &__button
    &_mobile 
      display none

@media (max-width: 867px) 
  .news
    &__container 
      flex-wrap wrap
    &__left 
      order 2
      width 100%
      display flex
      justify-content: space-between
      flex-direction: row
      flex-wrap wrap
      margin-right 0
      & .news__item
        width 48%
    &__right 
      order 1
      width 100%
    &__button
      display none
      &_mobile
        display inline-block
@media (max-width: 667px)
  .news 
    &__left 
      & .news__item
        width 100%
        &:last-child 
          margin-bottom 1rem
    

