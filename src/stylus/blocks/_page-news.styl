.page-news
  &__container 
    display flex
    justify-content: flex-start
    align-items: center
    flex-wrap wrap
  &__item 
    width 80%
    display flex
    justify-content: flex-start
    align-items: flex-start
    margin-bottom: 4rem;
  &__content
    display: flex;
    flex-direction: column;
  &__image 
    & img 
      margin-right 3rem
      max-width: 32rem
      height 17rem
      object-fit: cover
  &__date
    font-size 1.2rem
    margin-bottom 1rem
    color rgb(173, 2, 1)
  &__title
    font-size: 2rem;
    margin-bottom: 1rem
  &__text
    font-size 1.4rem
    margin-bottom 1rem
  &__link 
    font-size 1.4rem
    color rgb(173, 2, 1);

@media (max-width: 667px)
  .page-news
    &__item
      width 100%
      display block
    &__image
      margin-bottom 1rem
      & img 
        width 100%
        margin-right 0
        max-width: 100%
        height 20rem