.page-specialists
  display flex
  justify-content space-between
  align-items center
  flex-wrap wrap
  &__item
    width 100%
    display flex
    border 2px solid rgba(173, 2, 1, 0.8);
    padding 2rem
    max-width 48%
    margin-bottom 2rem
    &:first-child
      max-width 60%
  &__image
    width 120px
    height 120px
    margin-right 2rem
    border 2px solid rgba(173, 2, 1, 0.55);
    & img
      width 100%
      object-fit cover
  &__name
    font-size 2.4rem
    margin-bottom 1.4rem
  &__rank
    font-size 1.8rem
    color rgb(173, 2, 1);
    text-decoration underline
