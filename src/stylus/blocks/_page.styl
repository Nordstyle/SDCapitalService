.page
  &__news
    &_text
      font-size 1.6rem
      margin-bottom 3rem
      text-align justify
      line-height 2rem
    &_title
      margin-bottom 1rem
    &_date
      font-size: 1.6rem;
      margin-bottom: 1rem;
      color: #ad0201;
    &_photo
      float left
      margin-right 1rem
      margin-bottom 1rem
      & img
        max-width 40rem
        width 100%
        object-fit cover
    &_footer
      display flex
      justify-content center
    &_button
      display inline-block
      margin 0 auto
      &:last-child
        margin-right auto

@media (max-width:667px)
  .page
    &__news
      &_photo
        float none
        display block
        margin-right 0
        & img
          max-width 100%
          height 30rem

