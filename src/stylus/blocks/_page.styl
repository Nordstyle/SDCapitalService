.page
  &__doc
    display flex
    align-items center
    justify-content flex-start
    width 100%
    padding 1rem
    transition 0.3s
    margin-bottom 2rem
    &_image
      position relative
      margin-right 1rem
      transition 0.3s
      width 2rem
      height 2rem
      &:after
        position absolute
        left 0
        top 0
        width 2.4rem
        content '\f1c1'
        font-size 2rem
        color rgb(173, 2, 1)
        font-family FontAwesome
    &_text
      font-size 1.6rem
      color rgb(173, 2, 1);
      transition 0.3s
    &_subtext
      font-size 1.6rem
    &:hover
      background-color rgba(173, 2, 1,0.3);
    &:hover .page__doc_text
      color white
  &__homes
    &_text
      font-size 1.6rem
  &__news
    &_text
      font-size 1.6rem
      margin-bottom 3rem
      text-align justify
      line-height 2rem
    &_title
      margin-bottom 1rem
    &_date
      font-size: 1.6rem;
      margin-bottom: 1rem;
      color: #ad0201;
    &_photo
      float left
      margin-right 1rem
      margin-bottom 1rem
      & img
        max-width 40rem
        width 100%
        object-fit cover
    &_footer
      display flex
      justify-content center
    &_button
      display inline-block
      margin 0 auto
      &:last-child
        margin-right auto

@media (max-width:667px)
  .page
    &__news
      &_photo
        float none
        display block
        margin-right 0
        & img
          max-width 100%
          height 30rem

